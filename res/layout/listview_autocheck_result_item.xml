<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView 
        android:textColor="@color/black"
        android:id="@+id/tv_ac_result_type"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="测试类型"
        android:layout_weight="1"/>
    <TextView 
        android:textColor="@color/black"
        android:id="@+id/tv_ac_result_power_type"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="电能类型"
        android:layout_weight="1"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_ac_result_Ub"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="基本电压"
        android:layout_weight="1"/>
    <TextView 
         android:textColor="@color/black"
        android:id="@+id/tv_ac_result_Ib"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="基本电流"
        android:layout_weight="1"/>
    <TextView 
         android:textColor="@color/black"
        android:id="@+id/tv_ac_result_Ur"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="电压比例"
        android:layout_weight="1"/>
        <TextView 
             android:textColor="@color/black"
        android:id="@+id/tv_ac_result_Ir"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="电流比例"
        android:layout_weight="1"/>
    <TextView 
         android:textColor="@color/black"
        android:id="@+id/tv_ac_result_power_factor"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="功率因数"
        android:layout_weight="1"/>
    
    <TextView 
         android:textColor="@color/black"
        android:id="@+id/tv_ac_result_rate"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="频率"
        android:layout_weight="1"/>
    <TextView 
         android:textColor="@color/black"
        android:id="@+id/tv_ac_result_circle"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="圈数"
        android:layout_weight="1"/>
    <TextView 
         android:textColor="@color/black"
        android:id="@+id/tv_ac_result_count"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="次数"
        android:layout_weight="1"/>
	<TextView 
	     android:textColor="@color/black"
        android:id="@+id/tv_ac_result_error_range"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="误差限值"
        android:layout_weight="1"/>
		<TextView 
	     android:textColor="@color/black"
        android:id="@+id/tv_ac_result_test_state"
        android:layout_height="wrap_content"
        android:layout_width="0px"
        android:text="测试状态"
        android:layout_weight="1"/>
</LinearLayout>
