<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.wisdom.layout.TitleLayout
        android:id="@+id/title_acnl_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.wisdom.layout.TitleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cell_header_common_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="10"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="电能类型"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_power_type"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_power_type"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="基本电压(V)"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_Ub"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_Ub"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="基本电流(A)"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_Ib"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_Ib"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="电压选项(%)"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_Ur"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_Ur"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="电流选项(%)"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_Ir"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_Ir"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="功率因数"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_pf"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_power_factor"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="频率(Hz)"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_rate"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_rate"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="圈数"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_circle"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_circle"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="次数"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_count"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_count"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="30dip"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="误差限值"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />

                        <Spinner
                            android:id="@+id/sp_option_error_range"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/acnl_error_range"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/text_size_num" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_option_save"
                style="@style/MyButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="60dp"
                android:layout_weight="1.5"
                android:text="保存" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>